{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Semantica",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../frontend/.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev (inside frontend/)",
    "beforeBuildCommand": "npm run build (inside frontend/)"
  },
  "app": {
    "windows": [
      {
        "title": "Semantica",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
