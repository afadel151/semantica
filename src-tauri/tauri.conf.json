{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Semantica",
  "version": "0.1.0",
  "identifier": "com.semantica.app",
  "build": {
    "frontendDist": "../frontend/.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd ./frontend && bun run dev",
    "beforeBuildCommand": "cd ./frontend && bun run generate"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Semantica",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/backend-server"],
    "resources": ["splashscreen.html"]
  }
}
